.search {
  position: relative;
  padding: 20rpx 10rpx;
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
}
.search .placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  display: -webkit-box;
